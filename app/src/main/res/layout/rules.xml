<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".Rules">

    <Button
        android:id="@+id/btn_ret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F26A98"
        android:onClick="Click"
        android:text="Возврат"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_rules"
        app:layout_constraintStart_toStartOf="@+id/txt_rules"
        app:layout_constraintTop_toBottomOf="@+id/txt_rules"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F26A98"
        android:onClick="Click"
        android:text="Играть"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_rules"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/txt_rules"
        app:layout_constraintTop_toBottomOf="@+id/btn_ret"
        tools:ignore="OnClick,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/txt_rules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#FFC107"
        android:gravity="fill_horizontal"
        android:justificationMode="inter_word"
        android:text="@string/txt_Rules"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>